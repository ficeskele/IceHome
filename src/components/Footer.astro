---
import Container from "./Container.astro";
import { getLocaleFromPath, useTranslation } from "@/i18n/utils";

const locale = getLocaleFromPath(Astro.url.pathname);
const t = useTranslation(locale);
const year = new Date().getFullYear();
---

<footer class="border-t border-border py-8 mt-16">
  <Container>
    <div class="flex flex-col items-center justify-between gap-4 sm:flex-row">
      <p class="text-sm text-muted-foreground">
        &copy; {year} IceHome. {t("footer.rights")}
      </p>
      <p class="text-sm text-muted-foreground">
        {t("footer.builtWith")} <a href="https://astro.build" class="underline hover:text-foreground transition-colors" target="_blank" rel="noopener">Astro</a>
      </p>
    </div>
  </Container>
</footer>
