---
import Card from "./Card.astro";
import Badge from "./Badge.astro";
import { formatDate } from "@/i18n/utils";
import type { Locale } from "@/i18n/locales";

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
  href: string;
  locale: Locale;
}

const { title, description, date, tags, href, locale } = Astro.props;
---

<Card href={href} class="block p-6">
  <div class="flex flex-col gap-2">
    <div class="flex items-center gap-2 text-sm text-muted-foreground">
      <time datetime={date.toISOString()}>{formatDate(date, locale)}</time>
    </div>
    <h3 class="text-xl font-semibold tracking-tight">{title}</h3>
    <p class="text-muted-foreground line-clamp-2">{description}</p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-2">
        {tags.map((tag) => (
          <Badge>{tag}</Badge>
        ))}
      </div>
    )}
  </div>
</Card>
